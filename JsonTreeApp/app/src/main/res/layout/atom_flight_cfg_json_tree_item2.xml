<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

        <Button
            android:id="@+id/atom_flight_btn_expend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:text="+"/>

        <TextView
            android:id="@+id/atom_flight_tv_node_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/atom_flight_btn_expend"
            android:layout_alignTop="@id/atom_flight_btn_expend"
            android:layout_alignBottom="@id/atom_flight_btn_expend"
            android:gravity="center_vertical"
            android:text="demo///bstatus"/>

        <TextView
            android:id="@+id/atom_flight_tv_node_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/atom_flight_tv_node_key"
            android:layout_alignTop="@id/atom_flight_btn_expend"
            android:layout_alignBottom="@id/atom_flight_btn_expend"
            android:gravity="center_vertical"
            android:textColor="#7F8081"
            android:text="demo///{2}"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/atom_flight_tv_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/atom_flight_tv_node_size"
            android:layout_alignTop="@id/atom_flight_btn_expend"
            android:layout_alignBottom="@id/atom_flight_btn_expend"
            android:gravity="center_vertical"
            android:textColor="#7F8081"
            android:text=":"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/atom_flight_tv_node_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/atom_flight_tv_colon"
            android:layout_alignTop="@id/atom_flight_btn_expend"
            android:layout_alignBottom="@id/atom_flight_btn_expend"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="demo///-1"/>

    <LinearLayout
        android:id="@+id/atom_flight_ll_child_node_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atom_flight_tv_node_key"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

</LinearLayout>

</RelativeLayout>